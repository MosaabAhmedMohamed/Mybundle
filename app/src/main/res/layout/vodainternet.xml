<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/VodaInternetMonthlyBu"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="103dp"
            android:background="@drawable/vodabutton"
            android:text="monthly"
            android:textColor="#f5f5f5" />

        <Button
            android:id="@+id/VodaInternetWeeklyBu"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/VodaInternetMonthlyBu"
            android:layout_margin="20dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/vodabutton"
            android:text="weekly"
            android:textColor="#f5f5f5" />

        <Button
            android:id="@+id/VodaInternetDailyBu"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/VodaInternetWeeklyBu"
            android:layout_margin="20dp"
            android:layout_marginTop="65dp"
            android:background="@drawable/vodabutton"
            android:text="daily"
            android:textColor="#f5f5f5" />
   </RelativeLayout>
</ScrollView>
