<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context="com.example.android.mybundle.OrangeCallingDaily">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/OrangeCallingMonthlyText1"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="فوكس دوبل2جنيه:90وحدة,
الوحدة بدقيقة لأورنج,الشبكات الاخري الدقيقة بـ5وحدة"
            android:textColor="#f5f5f5"
            android:textSize="15sp" />

        <Button
            android:id="@+id/OrangeCallingDailyBu1"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/orangebutton"
            android:text="@string/sub"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2">

        <TextView
            android:id="@+id/OrangeCallingMonthlyText2"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="فوكس الاسبوعي5جنيه:200وحدة
الوحدة بدقيقة لأورنج,الشبكات الاخري
الدقيقةبـ5وحدة "
            android:textColor="#f5f5f5"
            android:textSize="15sp" />

        <Button
            android:id="@+id/OrangeCallingDailyBu2"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/orangebutton"
            android:text="@string/sub"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2"
        android:id="@+id/linearLayout33"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/OrangeCallingMonthlyText3"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="   فوكس الشهري15جنيه:90وحدة,الوحدة بدقيقة لأورنج الشبكات الاخري الدقيقة بـ5وحدة  "
            android:textColor="#f5f5f5"
            android:textSize="15sp" />

        <Button
            android:id="@+id/OrangeCallingDailyBu3"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/orangebutton"
            android:text="@string/sub"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/linearLayout33"
        android:orientation="horizontal"
        android:id="@+id/linearLayout3">

        <TextView
            android:id="@+id/OrangeCallingMonthlyText4"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="روقانجي أخر حاجه:14
 قرش لأي شبكة في مصر"
            android:textColor="#f5f5f5"
            android:textSize="15sp" />

        <Button
            android:id="@+id/OrangeCallingDailyBu4"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/orangebutton"
            android:text="@string/sub"
            android:textColor="@color/white" />
    </LinearLayout>




</RelativeLayout>
