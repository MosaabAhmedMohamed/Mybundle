<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.mybundle.OrangeCallingWeekly">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/OrangeCallingMonthlyText1"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:textSize="15sp"
            android:textColor="#f5f5f5"
            android:text="بانثر25جنيه:200دقيقه اورنج,800ميجا,
 500ميجا لمواقع التواصل الاجتماعي" />

        <Button
            android:id="@+id/OrangeCallingWeeklyBu1"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/orangebutton"
            android:text="@string/sub"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2">
        <TextView
            android:id="@+id/OrangeCallingMonthlyText2"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:textColor="#f5f5f5"
            android:textSize="15sp"
            android:text="بانثر40جنيه:500دقيقه اورنج,1,500ميجا,
 500ميجا لمواقع التواصل الاجتماعي" />

        <Button
            android:id="@+id/OrangeCallingWeeklyBu2"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/orangebutton"
            android:text="@string/sub"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2"
        android:id="@+id/linearLayout33"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/OrangeCallingMonthlyText3"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="بانثر60جنيه:800دقيقه اورنج,2,500ميجا,
 500ميجا لمواقع التواصل الاجتماعي"
            android:textColor="#f5f5f5"
            android:textSize="15sp" />

        <Button
            android:id="@+id/OrangeCallingWeeklyBu3"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/orangebutton"
            android:text="@string/sub"
            android:textColor="@color/white" />

    </LinearLayout>



</RelativeLayout>
